@model ChangePasswordViewModel

<section class="portfolio-area pb-70">
    <div class="container">
        <div class="section-title">
            <h2>Change Password</h2>
        </div>
        <form id="ChangePasswordForm" asp-action="ChangePassword" asp-controller="User" asp-area="Admin" autocomplete="off"
              data-ajax="true"
              data-ajax-method="POST"
              data-ajax-failure="AddOrEditOnFailure(xhr)"
              data-ajax-success="ChangePasswordOnSuccess(xhr,status,data)">
            <div class="container">
               <div class="row">
                    <div class="col-lg-12">
                        <div class="portfolio-details-information">
                            <div class="contact-form-inner">
                                <div class="row">
                                    <div class="col-lg-12 col-md-12">
                                    </div>
                                    <h5 id="ErrorOnFailure" class=" text-danger p-2" style="word-wrap: break-word"></h5>
                                    <div asp-validation-summary="ModelOnly" class="form-group text-center text-danger col-12">
                                    </div>
                                    <div class="form-group col-6">
                                        <label asp-for="Name">First Name </label>
                                        <input asp-for="Name" readonly class="form-control bg-light border border-2 rounded-3">
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                    <div class="form-group col-6">
                                        <label asp-for="Family">Last Name</label>
                                        <input asp-for="Family" readonly class="form-control bg-light border border-2 rounded-3">
                                        <span asp-validation-for="Family" class="text-danger"></span>
                                    </div>
                                    <div class="form-group col-6">
                                        <label asp-for="UserName">National Code</label>
                                        <input asp-for="UserName" readonly class="form-control bg-light border border-2 rounded-3">
                                        <span asp-validation-for="UserName" class="text-danger"></span>
                                    </div>
                                    <div class="form-group col-6">
                                        <label asp-for="CurrentPassword">Current Password</label>
                                        <input asp-for="CurrentPassword" type="password" class="form-control  border border-2 rounded-3">
                                        <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                                    </div>
                                    <div class="form-group col-6">
                                        <label asp-for="NewPassword">New Password</label>
                                        <input asp-for="NewPassword" type="password" class="form-control border border-2 rounded-3 BanListChecker">
                                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                                    </div>
                                    <div class="form-group col-6">
                                        <label asp-for="ConfirmNewPassword">Confirm New Password</label>
                                        <input asp-for="ConfirmNewPassword" type="password" class="form-control border border-2 rounded-3">
                                        <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                                    </div>
                                    <div class="col-lg-12 col-md-12">
                                        <a data-bs-dismiss="modal" class="btn btn-labeled btn-primary pull-left">
                                            <b><i class="fa fa-arrow-right"></i></b> Cancel
                                        </a>
                                        <button type="submit" class="btn btn-success btn-labeled pull-left ms-2">
                                            <b><i class="fa fa-check-square-o"></i></b> Submit
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>



