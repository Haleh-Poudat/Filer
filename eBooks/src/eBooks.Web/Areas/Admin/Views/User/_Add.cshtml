@model AddUserViewModel

<section class="portfolio-area pb-70">
    <div class="container">
        <div class="section-title">
            <h2>Add New User</h2>
        </div>
        <form id="AddUserForm" asp-action="Add" asp-controller="User" asp-area="Admin" autocomplete="off"
              data-ajax="true"
              data-ajax-method="POST"
              data-ajax-failure="AddOrEditOnFailure(xhr)"
              data-ajax-success="AddLibraryOnSuccess(xhr,status,data)">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="portfolio-details-information">
                            <div class="contact-form-inner">
                                <div class="row">
                                    <div class="col-lg-12 col-md-12">
                                        <div class="form-group text-center">
                                        </div>
                                    </div>
                                    <h5 id="ErrorOnFailure" class=" text-danger p-2" style="word-wrap: break-word"></h5>
                                    <div asp-validation-summary="ModelOnly" class="form-group text-center text-danger col-12">
                                    </div>
                                    <div class="form-group col-6">
                                        <label asp-for="Name">First Name </label>
                                        <input asp-for="Name" class="form-control border border-2 rounded-3">
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                    <div class="form-group col-6">
                                        <label asp-for="Family">Last Name</label>
                                        <input asp-for="Family" class="form-control border border-2 rounded-3">
                                        <span asp-validation-for="Family" class="text-danger"></span>
                                    </div>
                                    <div class="form-group col-6">
                                        <label asp-for="UserName">National Code</label>
                                        <input asp-for="UserName" class="form-control border border-2 rounded-3">
                                        <span asp-validation-for="UserName" class="text-danger"></span>
                                    </div>
                                    <div class="form-group col-6">
                                        <label asp-for="PhoneNumber">Phone Number</label>
                                        <input asp-for="PhoneNumber" required class="form-control border border-2 rounded-3">
                                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                    </div>
                                    <div class="form-group col-6">
                                        <label asp-for="Password">Password</label>
                                        <input asp-for="Password" required class="form-control border border-2 rounded-3 BanListChecker">
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                    <div class="form-group col-6 align-content-end">
                                        <a data-bs-dismiss="modal" class="btn btn-labeled btn-primary pull-left me-2 mb-2">
                                            <b><i class="fa fa-arrow-right"></i></b> Cancel
                                        </a>

                                        <button type="submit" class="btn btn-success btn-labeled pull-left mb-2">
                                            <b><i class="fa fa-check-square-o ms-2"></i></b>Submit
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>

