@model EditRoleViewModel


<div class="section-title">
    <span>Role Management</span>
    <h2>Edit Role @Model.Name</h2>
    <h5 id="ErrorOnFailure" class=" text-danger p-2" style="word-wrap:break-word"></h5>
</div>
<form id="EditRoleForm" asp-action="Edit" asp-controller="Role" asp-area="Admin" asp-route-id="@Model.Id"
      data-ajax="true"
      data-ajax-method="POST"
      data-ajax-failure="AddOrEditOnFailure(xhr)"
      data-ajax-success="EditOnSuccess(xhr,status,data,'Row-@Model.Id')">
    <div class="container">
        <div class="row">
            <div class="portfolio-details-information">
                <div class="contact-form-inner">
                    <div class="row">
                        <input asp-for="@Model.Id" type="hidden"/>
                        <input asp-for="@Model.Name" type="hidden"/>
                        <div class="form-group">
                            <label asp-for="NewName" class="fw-bold"> New Role Title </label>
                            <input asp-for="NewName" type="text" class="form-control border border-2 rounded-3">
                            <span asp-validation-for="NewName"  class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div> 
        <div class="row">
            <div class="text-center">
                <h6 class="text-danger pb-2">Permissions for the New Role</h6>
            </div>

        </div>
        <div class="col pt-4">
            <button type="submit" class="btn btn-lg btn-danger">Submit</button>
            <a data-bs-dismiss="modal" class="btn btn-lg btn-primary">Cancel</a>
        </div>
    </div>
</form>


