@model AddRoleViewModel
<div class="section-title">
    <span>User Group Management</span>
    <h2>Add New Role</h2>
</div>
<form id="AddRoleForm" asp-action="Add" asp-controller="Role" asp-area="Admin"
      data-ajax="true"
      data-ajax-method="POST"
      data-ajax-failure="AddOrEditOnFailure(xhr)"
      data-ajax-success="AddOnSuccess(xhr,status,data)">
    <div class="container">
        <div class="row">
            <div class="portfolio-details-information">
                <div class="contact-form-inner">
                    <div class="row">
                        <h5 id="ErrorOnFailure" class=" text-danger p-2" style="word-wrap:break-word"></h5>
                        <div class="form-group">
                            <label asp-for="Name" class="fw-bold"> Role Title </label>
                            <input asp-for="Name" required class="form-control border border-2 rounded-3">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="text-center">
                <h6 class="text-danger pb-2">Permissions for the New Role</h6>
            </div>

        </div>
        <div class="col pt-4">
            <button type="submit" class="btn btn-lg btn-danger">Submit</button>
            <a data-bs-dismiss="modal" class="btn btn-lg btn-primary">Cancel</a>
        </div>
    </div>
</form>

