@model eBooks.ViewModel.Library.Category.AddLibraryCategoryViewModel
<section class="portfolio-area pb-70">
    <div class="container">
        <div class="section-title mb-4">
            @if (!Model.ParentId.HasValue)
            {
                <h5 class="modal-title">Add new category</h5>
            }
            else
            {
                <h5>Add new category to @Model.ParentTitle</h5>
            }
        </div>
        <form id="createLibraryCategoryForm" asp-action="Add" asp-controller="Category" asp-area="" autocomplete="off"
              data-ajax="true"
              data-ajax-method="POST"
              data-ajax-failure="AddOrEditLibraryOnFailure(xhr)"
              data-ajax-success="AddOnCategorySuccess(xhr,status,data)">


            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="portfolio-details-information">
                            <div class="contact-form-inner">
                                <div class="row">
                                    <div class="modal-body">
                                        <div class="modal-body">
                                            <div asp-validation-summary="ModelOnly" class="form-group text-center text-danger col-12"></div>
                                            <div id="ErrorOnFailure" class="form-group text-center text-danger col-12"></div>
                                            <input type="hidden" asp-for="ParentId" />
                                            <input type="hidden" asp-for="ParentTitle" />
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        <label class="control-label" asp-for="Title" for="Title">Title</label>
                                                        <input type="text" id="Title" asp-for="Title" name="Title" class="form-control" value="@Model.Title" />
                                                        <span asp-validation-for="Title" class="text-danger"></span>
                                                    </div>
                                                    <div class="form-group">
                                                        <label class="control-label" asp-for="Description">Description</label>
                                                        <textarea id="Description" asp-for="Description" class="form-control">@Model.Description</textarea>
                                                        <span asp-validation-for="Description" class="text-danger"></span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="submit" id="createLibraryCategoryButton" autocomplete="off" data-loading-text="Submitting information" class="btn btn-success btn-labeled">
                                                <b><i class="fa fa-check-square-o"></i></b> Add
                                            </button>
                                            <a class="btn btn-default btn-primary btn-md" data-bs-dismiss="modal" aria-hidden="true">
                                                <b><i class="fa fa-arrow-right"></i></b> Cancel
                                            </a>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>

