@model RegisterViewModel
@{
    ViewData["Title"] = "Sign up";
}
@section Scripts{
    <partial name="_CaptchaScripts" />
}
<section class="register-area ptb-100">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="register-form">
                    <h2>@ViewData["Title"]</h2>
                    <div  asp-validation-summary="All" class="text-danger"></div>
                    <form asp-action="Register" asp-controller="Account" asp-area="">
                        <partial name="_CaptchaInput" />
                        <div class="form-group">
                            <label asp-for="PhoneNumber">Mobile Number</label>
                            <input asp-for="PhoneNumber" type="text" required class="form-control" placeholder="******0914">
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="row row-cols-2">
                            <div class="form-group">
                                <label asp-for="Name">First Name</label>
                                <input asp-for="Name" required class="form-control" placeholder="Persian Characters">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Family" class="text-black">Last Name</label>
                                <input asp-for="Family" type="text" required class="form-control" placeholder=" Persian Characters ">
                                <span asp-validation-for="Family" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password">Password</label>
                                <input asp-for="Password" type="password" required class="form-control" placeholder="*******">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ConfirmPassword">Confirm password</label>
                                <input asp-for="ConfirmPassword" type="password" required class="form-control" placeholder="******">
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group pt-2">
                            <button type="submit" class="default-btn">Sign up</button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="register-image">
                    <img src="~/images/site/register-form.png" alt="image">
                </div>
            </div>
        </div>
    </div>
</section>